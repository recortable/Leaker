<% end %>


<div id="cableParagraphs">
  <div class="header row">
    <div class="original span6 columns">
      <h4>Texto original</h4>
    </div>
    <div class="translated span6 columns">
      <h4>Traducci贸n</h4>
    </div>
    <div class="comments span4 columns">
      <h4>Comentarios</h4>
    </div>
  </div>
  <div class="paragraphs">

<% if @cable %>
  <% @cable.paragraphs.each do |paragraph| %>
  <div class="row">
    <div class="original span6 columns">
      <%= paragraph.original %>
    </div>
    <div class="translated span6 columns">
      <%= paragraph.translated %>
      <div class="actions">
      <%= link_to 'mejorar traducci贸n',
        edit_cable_paragraph_path(@cable, paragraph.id) %> /
      <%= link_to 'comentar' %>
      </div>
    </div>
    <div class="comments span4 columns">
    </div>
  </div>
  <% end %>

<% else %>
  <script type="text/html" id="paragraphs-tmpl">
    <# for ( var i = 0; i < original.length; i++ ) { #>
      <div class="row">
        <div class="translated span6 columns">
          <#= original[i] #>
        </div>
        <div class="translated span6 columns">
          &nbsp;
        </div>
        <div class="translated span6 columns">
            &nbsp;
        </div>
      </div>
    <# } #>
  </script>
<% end %>
  </div>
</div>

