<a name="paragraph-<%= paragraph.id %>">&nbsp;</a>
<div class="paragraph row highlight-paragraph-<%= paragraph.id %>">
  <div class="original span6 columns">
    <%= paragraph.original %>
  </div>
  <div class="translated span6 columns">
    <%= paragraph.translated %>
  </div>
  <div class="comments span4 columns">
    <%= render paragraph.comments %>&nbsp;
  </div>
</div>
<div class="bottom actions">Párrafo:
<%= link_to 'mejorar traducción',
  edit_cable_paragraph_path(paragraph.cable, paragraph.id) %> /
<%= link_to 'comentar',
  new_cable_comment_path(paragraph.cable, paragraph: paragraph.id) %>
</div>

